= partial("header")

%body.next_simulador
	.cover_text SIMULADOR
	= partial("menu_red")
	#ficha
		.data
			.text
				%h1 TORRE CAMPOS ELISEOS
				%h2 Marhnos Inmobiliaria, S.A. De C.V.
				%a{:href => "/proyecto"} < Regresar al proyecto
			.square
				.label Patrimoniales
				%h2 Hola, Saúl González:
				%p Este es el resumen de inversión para el proyecto Torre Campos Eliseos:
				.money
					%span A
					%input#inputinversion{:type => 'text', :value => '$50,000 MXN', :tag => '50000'}
					#controls
						.controlup
						.controldown
					%p INVERSIÓN
				.money#moneyb
					%span B
					%h3 
						$
						.currency  0
						MXN
					%p RETORNO
				%a.button#reload{:href => "/registro"}Empieza a Invertir
				.social
					%p Comparte el resumen de esta inversión:
					%span
						.icon.email
						Correo
					%span
						.icon.print
						Imprimir
					%span
						.icon.url
						URL
	#canvas
		.cover_text SIMULADOR
		.content
			#name
				.icon
				%p TORRE CAMPOS ELISIOS
			.line.top#line1
			.point#point1
				.icon.active
				.pointer
			.step#step1
				%span Enero/2016
				.reach
					.label
					%h2 Proyecto Ejecutivo
					%p Hacemos due dilligence exhaustivo de cada proyecto inmobiliario y seleccionamos sólo los mejores para que inicies tu portafolio.
					%p Asimismo, trabajamos con bancos nacionales para que tus inversiones sean más seguras.
			.line.top#line2
			.point#point2
				.icon.active
				.pointer
			.step#step2
				%span Abril/2016
				.reach.large
					.label
					%h2 Inicia desarrollo
					.photos
						%img{:src => '/images/demos/project.png'}
						%img{:src => '/images/demos/project.png'}
						%img{:src => '/images/demos/project.png'}
						%img{:src => '/images/demos/project.png'}
					.icon.images
			.line#line3
			.point#point3
				.icon.active
				.pointer
			.step#step3
				%span.notop Julio/2016
				%p.simple FONDEO COLECTIVO
			.line#line4
			.point#point4
				.icon.active
				.pointer
			.step#step4
				%span Agosto/2016
				.reach.video
					.label
					%h2 Inicia desarollo
					.minivideo
						%img.play{:src => '/images/icons/play.svg'}
					.icon.play
			.line#line5
			.point#point5
				.icon.active
				.pointer
			.step.green#step5
				%span.notop Agosto/2017
				%p.simple Preventa
			.line#line6
			.point#point6
				.icon.active
				.pointer
			.step#step6
				%span Agosto/2017
				%p.simple Termina desarrollo
	#timeline
		.cover_text INVERSIONES
		.center 
			%h2.title Línea de tiempo de tu inversion:
			.timeline
				.point#point1
					.icon.active
					.pointer
				.step#step3
					%span.red Agosto/2017
					.reach.large
						.label
						%h2 Inicia desarrollo
						.photos
							%img{:src => '/images/demos/project.png'}
							%img{:src => '/images/demos/project.png'}
							%img{:src => '/images/demos/project.png'}
							%img{:src => '/images/demos/project.png'}
						.icon.images
				.line.top#line4
				.point#point4
					.icon
				.step.green#step4
					%span Julio/2017
					%p FONDEO COLECTIVO
				.line.top#line5
				.point#point5
					.icon
				.step#step5
					%span Enero/2017
					.reach
						.label
						%h2 Proyecto Ejecutivo
						%p Hacemos due dilligence exhaustivo de cada proyecto inmobiliario y seleccionamos sólo los mejores para que inicies tu portafolio.
						%p Asimismo, trabajamos con bancos nacionales para que tus inversiones sean más seguras.
				.line.top#line6
				.point#point6
					.icon
				.step#step6
					%span Agosto/2016
					%p.simple Inversión, bancos e inversionistas
				.line.top#line7
				.point#point7
					.icon
				.step#step7
					%span Agosto/2016
					.reach
						.label
						%h2 Visita el proyecto
						%p 
							%strong Saúl,
							elige la hora en que quieres visitar la construcción.
						.timer
							.counter
								#hour 10
								%span :00 
								#time HRS
								#arrows
									.arrowup
									.arrowdown
							.button Confirmar
						.icon.time
				.line.top#line8
				.point#point8
					.icon
				.step#step8
					%span Agosto/2016
					.reach.video
						.label
						%h2 Torre Campos Eliseos
						.minivideo
							%img.play{:src => '/images/icons/play.svg'}
						.icon.play
